{
  "plugins": ["@shufo/prettier-plugin-blade"],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "bracketSameLine": true,
        "parser": "blade",
        "printWidth": 300,
        "singleAttributePerLine": true,
        "tabWidth": 4,
        "wrapAttributesMinAttrs": 7
      }
    }
  ]
}
